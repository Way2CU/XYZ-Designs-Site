<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<document type="html5">
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_blog"/>
			</title>
			<cms:collection include="page_control,animation_chain"/>
			<cms:script src="_BASEURL.'/site/scripts/header_animation.js'" cms:eval="src"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- floating form for dialog -->
			<cms:desktop>
				<cms:template file="parts/floating_menu.xml"/>
			</cms:desktop>

			<!-- Top section of the site -->
			<cms:template file="parts/header.xml"/>

			<div class="intro blog">
				<h1><cms:text constant="blog_message"/></h1>
			</div>

			<section class="blog">
				<cms:desktop>
					<div class="blogs">
						<cms:module
							name="articles"
							action="show_list"
							group="blogs"
							order_by="id"
							order_asc="0"
							template="parts/blog_list.xml"
						/>
					</div>

					<div class="blog_admin">
						<cms:module
							name="articles"
							action="show"
							text_id="rotem"
							template="parts/blog_admin.xml"
							/>
						<div class="newsletter">
							<cms:module
								name="articles"
								action="show"
								text_id="newsletter"
								template="stock/article_generic.xml"
								>
								<param name="title" value=""/>
							</cms:module>
							<cms:module
								name="contact_form"
								action="show"
								text_id="newsletter"
								/>
						</div>
					</div>
				</cms:desktop>

				<cms:mobile>
					<div class="blog_admin">
						<cms:module
							name="articles"
							action="show"
							text_id="rotem"
							template="parts/blog_admin.xml"
							/>
						<div class="newsletter">
							<cms:module
								name="articles"
								action="show"
								text_id="newsletter"
								template="stock/article_generic.xml"
								>
								<param name="title" value=""/>
							</cms:module>
							<cms:module
								name="contact_form"
								action="show"
								text_id="newsletter"
								/>
						</div>
					</div>
					<div class="blogs">
						<cms:module
							name="articles"
							action="show_list"
							group="blogs"
							order_by="id"
							order_asc="0"
							template="parts/blog_list.xml"
						/>
					</div>
				</cms:mobile>
			</section>

			<!-- Bottom part of the site -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>