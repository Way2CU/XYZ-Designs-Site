<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection include="page_control"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Top section of the site -->
			<cms:template file="parts/header.xml"/>

			<div class="slider">
				<cms:module
					name="gallery"
					action="show_image_list"
					group="slider_images"
					order_by="text_id"
					template="parts/slider_images.xml"
					/>
				<div class="controls"></div>
				<div class="links">
					<a
						class="product"
						href="URL::make(array(), 'products.xml')"
						cms:eval="href"
						>
						<cms:text constant="button_products"/>
					</a>

					<a href="javascript:void(0)" class="contact">
						<cms:text constant="button_contact"/>
					</a>
				</div>
				<div class="form_wrap">
					<h3><cms:text constant="form_title"/></h3>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact"
						/>
				</div>
			</div>
		</body>
	</html>
</document>