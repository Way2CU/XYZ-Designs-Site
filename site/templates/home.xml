<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection include="page_control,animation_chain"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Top section of the site -->
			<cms:template file="parts/header.xml"/>

			<div class="slider">
				<cms:module
					name="gallery"
					action="show_image_list"
					group="slider_images"
					order_by="text_id"
					template="parts/slider_images.xml"
					/>
				<div class="controls"></div>
				<div class="links">
					<a
						class="product"
						href="URL::make(array(), 'products.xml')"
						cms:eval="href"
						>
						<cms:text constant="button_products"/>
					</a>

					<a href="javascript:void(0)" class="contact">
						<cms:text constant="button_contact"/>
					</a>
				</div>
				<div class="form_wrap">
					<h4><cms:text constant="form_title"/></h4>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact"
						/>
				</div>
			</div>

			<section class="center texture">
				<cms:module
					name="articles"
					action="show_group"
					text_id="services"
					template="parts/group_article.xml"
					/>
				<ul id="services">
					<cms:module
						name="articles"
						action="show_list"
						group="services"
						template="stock/features_generic.xml"
						>
						<param name="sprite" value="site-sprite"/>
						<param name="title" value=""/>
					</cms:module>
				</ul>
			</section>

			<section>
				<cms:module
					name="articles"
					action="show"
					text_id="about"
					template="parts/article.xml"
					/>
			</section>

			<section class="features center">
				<cms:module
					name="articles"
					action="show_group"
					text_id="features"
					template="parts/group_article.xml"
					/>
				<ul id="features">
					<cms:module
						name="articles"
						action="show_list"
						group="features"
						template="stock/features_generic.xml"
						>
						<param name="title" value=""/>
					</cms:module>
				</ul>
				<p class="warranty">
					<cms:text constant="board_explanation"/>
				</p>
			</section>

			<section class="boards">
				<cms:module
					name="articles"
					action="show"
					text_id="boards"
					template="stock/article_generic.xml"
					>
					<param name="title" value=""/>
				</cms:module>
			</section>

			<section class="gallery center">
				<cms:module
					name="gallery"
					action="show_group"
					text_id="home_page_gallery"
					template="parts/gallery_group.xml"
					/>

				<cms:module
					name="gallery"
					action="show_image_list"
					group="home_page_gallery"
					template="parts/gallery_images.xml"
					/>
			</section>

			<section class="clients center">
				<cms:module
					name="gallery"
					action="show_group"
					text_id="clients"
					template="parts/gallery_group.xml"
					/>

				<cms:module
					name="gallery"
					action="show_image_list"
					group="clients"
					template="parts/gallery_images.xml"
					/>
			</section>

			<!-- Bottom part of the site -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>