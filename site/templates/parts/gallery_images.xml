<document>
	<a
		class="lightbox"
		href="$params['image']"
		cms:eval="href"
		>
		<img
			src="gallery::getThumbnailById($params['id'], null, $template['thumbnail_size'], Thumbnail::CONSTRAIN_HEIGHT)"
			alt="$params['title'][$language]"
			cms:eval="src,alt"
			/>
		<cms:if condition="isset($template['title'])">
			<span class="texture"><cms:var param="title" multilanguage="yes"/></span>
		</cms:if>
	</a>
</document>