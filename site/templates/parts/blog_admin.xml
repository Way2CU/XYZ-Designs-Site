<document>
	<article
		>
		<cms:desktop>
			<img
				src="gallery::getGroupThumbnailById($params['gallery'], null, 400, Thumbnail::CONSTRAIN_HEIGHT);"
				alt="$params['title'][$language]"
				cms:eval="src,alt"
				/>
		</cms:desktop>

		<img
			class="portfolio"
			src="gallery::getThumbnailById(null, 'portfolio', 200, Thumbnail::CONSTRAIN_HEIGHT);"
			alt="$params['title'][$language]"
			cms:eval="src,alt"
			/>

		<h2><cms:var param="title" multilanguage="yes"/></h2>
		<cms:markdown param="content" multilanguage="yes"/>

		<a
			target="_blank"
			href="facebook_address"
			class="facebook"
			cms:constant="href"
			>
		</a>
	</article>
</document>